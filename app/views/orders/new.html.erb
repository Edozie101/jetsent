
<div class="container">
    <%= simple_form_for(@order) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
         <%= f.input :website, input_html:{value: "#{@order.website}", id: "webinput"}   %>
      </div>

      <div class="form-inputs">
        <%= f.input :name, input_html:{value: "#{@order.name}", id: "name"}  %>
      </div>
      <div class="form-inputs">
         <%= f.input :price, input_html:{value: "#{@order.price}", id: "price"}   %>
       </div>


       <div class="form-inputs">
          <%= f.input :pickup_location, placeholder: "Enter the pickup country", input_html:{id: "pickup"}  %>
        </div>
        <div class="form-inputs">
           <%= f.input :drop_off_location, placeholder: "Enter where  would you like to collect the item" , input_html:{id: "dropoff"} %>
         </div>

      <div class="form-actions">
        <%= f.button :submit %>
      </div>

    <% end %>


<script>
    $("webinput").on("change", function () {
        alert("changed web input is: " + $("webinput").value())

    })


</script>
</div>
